# See http://editorconfig.org for more info.

# This is the root-level config file.
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 130

[*.rst]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
